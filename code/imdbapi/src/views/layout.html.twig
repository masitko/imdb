<body>

    {% block content %}    
    {% endblock content %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="/js/TweenMax.min.js"></script>

    <script>
    var mobileVersion = false;
    var windowSize;


    //check size
    function whichVersion() {
        windowSize = $(window).outerWidth();
        if (windowSize < 501) {
            mobileVersion = true;
            $('#home-search input').first().attr('class', 'moot');
            $('#home-search .search-list').attr('class', 'moot');
            $('#mobileSearch input').first().attr('class', 'title-box');
            $('#mobileSearch ul').attr('class', 'search-list');

        } else {
            mobileVersion = false;
            $('#mobileSearch input').first().attr('class', 'moot');
            $('#mobileSearch ul').attr('class', 'moot');
            $('#home-search input').first().attr('class', 'title-box');
            $('#home-search .search-list').attr('class', 'search-list');
        }
    }

    $(function () {
        whichVersion();
    });

    $(window).resize(function () {
        whichVersion();
    });

    </script>
    {% block postscripts %}
    {% endblock postscripts %}
</body>
</html>
